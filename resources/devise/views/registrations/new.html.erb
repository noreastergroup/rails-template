<%= render "devise/shared/layout", title: "Sign up for an account" do %>
  <%= render "devise/shared/invitation" %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-input" %>
    </div>

    <div class="mb-4">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, autocomplete: "email", class: "form-input" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-input" %>
    </div>

    <%= f.submit "Sign up", class: "btn btn-primary w-full" %>
  <% end %>

  <%= render "devise/shared/links" %>
<% end %>
